@{
    ViewData["Title"] = "Blog List";
}
<a asp-controller="Blog" asp-action="CreateBlog"><button type="submit" class="mb-3 btn btn-outline-primary">Add New Blog</button></a>
<table class="table" id="blog_table">
    <thead>
        <tr>
            <th scope="col">Blog Title</th>
            <th scope="col">Blog Author</th>
            <th scope="col">Blog Content</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
</table>
@section Scripts{
    <script src="~/js/pages/Blog/blog.js" asp-append-version="true"></script>
}